extends layout

block content
  p
    a(href='/') <-

  h1= title

  form(method='POST' action='')

    div.form-group
      label(for='name') name:
      input#name.form-control(type='text', placeholder='Name of item' name='name' required='true' value='')
      ul
    div.form-group
      label(for='partida') partida:
      input#partida.form-control(type='text', placeholder='partida' name='partida' required='true' value='')
      ul
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg